    <h2 class="mt-8 mb-3 font-semibold text-xl">Service</h2>
    <!-- Card Section -->
    <div class="w-full mx-auto">
      <!-- Grid -->
      <div class="grid sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-3 sm:gap-4">
